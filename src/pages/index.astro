---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const allPosts = await getCollection('blog');
// In production, filter out unpublished posts; in dev, show all
const posts = (
  import.meta.env.PROD
    ? allPosts.filter((post) => post.data.published !== false)
    : allPosts
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .hero {
        background: linear-gradient(
          135deg,
          var(--accent) 0%,
          var(--accent-dark) 100%
        );
        padding: 3rem 2rem;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
        transition:
          background 0.3s ease,
          background-color 0.3s ease;
      }

      .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.05"/><circle cx="20" cy="80" r="0.5" fill="white" opacity="0.05"/><circle cx="80" cy="30" r="0.5" fill="white" opacity="0.05"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        pointer-events: none;
      }

      .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
      }

      .hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.1;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
      }

      .hero .subtitle {
        font-size: 1.1rem;
        margin-bottom: 0;
        opacity: 0.95;
        font-weight: 300;
        line-height: 1.5;
      }

      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 3rem 2rem;
        transition:
          background 0.3s ease,
          background-color 0.3s ease,
          color 0.3s ease;
      }

      .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        margin-top: 2rem;
        width: 100%;
        box-sizing: border-box;
      }

      .post-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        overflow: hidden;
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease,
          background-color 0.3s ease,
          border-color 0.3s ease;
        box-shadow: var(--box-shadow-lg);
        min-height: 180px;
        position: relative;
        display: flex;
        flex-direction: column;
        aspect-ratio: 1.2;
      }

      .post-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--box-shadow-xl);
        border-color: var(--accent);
      }

      .post-card a {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative;
      }

      .post-card::before {
        content: attr(data-letter);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 4rem;
        font-weight: bold;
        color: rgba(var(--gray), 0.08);
        z-index: 1;
        pointer-events: none;
        transition: color 0.3s ease;
      }

      .post-image {
        width: 100%;
        height: 150px;
        overflow: hidden;
      }

      .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .post-content {
        padding: 1.25rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        z-index: 2;
        background: rgba(var(--gray-light), 0.02);
        backdrop-filter: blur(1px);
      }

      .post-title {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
        font-weight: 700;
        line-height: 1.3;
        color: var(--text-primary);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        transition: all 0.3s ease;
        letter-spacing: -0.01em;
      }

      .post-card:hover .post-title {
        color: var(--accent);
      }

      .post-description {
        margin: 0 0 0.5rem 0;
        color: var(--text-secondary);
        font-size: 0.8rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex: 1;
        transition: color 0.3s ease;
      }

      .post-date {
        margin: 0;
        color: var(--text-secondary);
        font-size: 0.75rem;
        font-weight: 500;
        transition: color 0.3s ease;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .hero {
          padding: 2rem 1rem;
        }

        .hero h1 {
          font-size: 2rem;
        }

        .hero .subtitle {
          font-size: 1rem;
        }

        main {
          padding: 1rem;
        }

        .posts-grid {
          grid-template-columns: 1fr !important;
          gap: 1rem;
        }

        .post-card {
          min-height: 120px;
          aspect-ratio: 2.5;
        }

        .post-card::before {
          font-size: 2.5rem;
        }

        .post-content {
          padding: 1rem;
        }

        .post-title {
          font-size: 1rem;
          font-weight: 700;
          -webkit-line-clamp: 1;
        }

        .post-description {
          font-size: 0.75rem;
          -webkit-line-clamp: 1;
        }
      }

      @media (min-width: 769px) and (max-width: 1024px) {
        .posts-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 1025px) {
        .posts-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
    </style>
  </head>
  <body>
    <Header />

    <div class="hero">
      <div class="hero-content">
        <h1>Latest Posts</h1>
        <p class="subtitle">
          Insights and thoughts on web development, technology, and software
          engineering
        </p>
      </div>
    </div>

    <main>
      <div class="posts-grid">
        {
          posts.map((post) => (
            <article
              class="post-card"
              data-letter={post.data.title.charAt(0).toUpperCase()}
            >
              <a href={`/blog/${post.id}/`}>
                {post.data.heroImage && (
                  <div class="post-image">
                    <Image
                      width={280}
                      height={150}
                      src={post.data.heroImage}
                      alt=""
                    />
                  </div>
                )}
                <div class="post-content">
                  <h3 class="post-title">{post.data.title}</h3>
                  <p class="post-description">{post.data.description}</p>
                  <p class="post-date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </main>

    <Footer />
  </body>
</html>
