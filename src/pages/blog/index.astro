---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const allPosts = await getCollection('blog');
// In production, filter out unpublished posts; in dev, show all
const posts = (
  import.meta.env.PROD
    ? allPosts.filter((post) => post.data.published !== false)
    : allPosts
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section>
        <div class="posts-grid">
          {
            posts.map((post) => (
              <article
                class="post-card"
                data-letter={post.data.title.charAt(0).toUpperCase()}
              >
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage && (
                    <div class="post-image">
                      <Image
                        width={280}
                        height={150}
                        src={post.data.heroImage}
                        alt=""
                      />
                    </div>
                  )}
                  <div class="post-content">
                    <h3 class="post-title">{post.data.title}</h3>
                    <p class="post-description">{post.data.description}</p>
                    <p class="post-date">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </div>
                </a>
              </article>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />

    <style>
      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
        width: 100%;
        box-sizing: border-box;
      }

      .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        margin-top: 2rem;
        width: 100%;
        box-sizing: border-box;
      }

      .post-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 1px 6px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition:
          transform 0.2s ease,
          box-shadow 0.2s ease;
        min-height: 180px;
        position: relative;
        display: flex;
        flex-direction: column;
        aspect-ratio: 1.2;
      }

      .post-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.12);
      }

      .post-card a {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative;
      }

      .post-card::before {
        content: attr(data-letter);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 4rem;
        font-weight: bold;
        color: rgba(0, 0, 0, 0.05);
        z-index: 1;
        pointer-events: none;
      }

      .post-image {
        width: 100%;
        height: 150px;
        overflow: hidden;
      }

      .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .post-content {
        padding: 1rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        z-index: 2;
      }

      .post-title {
        margin: 0 0 0.5rem 0;
        font-size: 1rem;
        font-weight: 600;
        line-height: 1.2;
        color: #1a1a1a;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .post-description {
        margin: 0 0 0.5rem 0;
        color: #666;
        font-size: 0.8rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex: 1;
      }

      .post-date {
        margin: 0;
        color: #888;
        font-size: 0.75rem;
        font-weight: 500;
      }

      .post-card:hover .post-title {
        color: #3b82f6;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .posts-grid {
          grid-template-columns: 1fr !important;
          gap: 1rem;
        }

        main {
          padding: 1rem;
        }

        .post-card {
          min-height: 120px;
          aspect-ratio: 2.5;
        }

        .post-card::before {
          font-size: 2.5rem;
        }

        .post-content {
          padding: 0.75rem;
        }

        .post-title {
          font-size: 0.9rem;
          -webkit-line-clamp: 1;
        }

        .post-description {
          font-size: 0.75rem;
          -webkit-line-clamp: 1;
        }
      }

      @media (min-width: 769px) and (max-width: 1024px) {
        .posts-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 1025px) {
        .posts-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
    </style>
  </body>
</html>
