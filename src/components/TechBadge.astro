---
import {
  siClerk,
  siClaude,
  siConvex,
  siDaisyui,
  siExpo,
  siGo,
  siJavascript,
  siKubernetes,
  siNextdotjs,
  siPnpm,
  siPostgresql,
  siReact,
  siShadcnui,
  siSpotify,
  siTailwindcss,
  siTerraform,
  siTurborepo,
  siTypescript,
  siVercel,
  type SimpleIcon,
} from 'simple-icons';

interface Props {
  label: string;
  href?: string;
  tone?: 'neutral' | 'added' | 'removed';
  techKey?: string;
  primaryTag?: string;
}

const { label, href, tone = 'neutral', techKey, primaryTag } = Astro.props;

const normalize = (value: string) =>
  value.toLowerCase().replace(/[^a-z0-9]/g, '');

type IconDef =
  | { kind: 'simple'; icon: SimpleIcon }
  | { kind: 'asset'; src: string };

const OPENAI_ICON: IconDef = { kind: 'asset', src: '/icons/openai.svg' };

const ICON_BY_KEY: Record<string, IconDef> = {
  clerk: { kind: 'simple', icon: siClerk },
  clerkauthentication: { kind: 'simple', icon: siClerk },
  claude: { kind: 'simple', icon: siClaude },
  claudecode: { kind: 'simple', icon: siClaude },
  codex: OPENAI_ICON,
  codexdesktop: OPENAI_ICON,
  convex: { kind: 'simple', icon: siConvex },
  daisyui: { kind: 'simple', icon: siDaisyui },
  expo: { kind: 'simple', icon: siExpo },
  go: { kind: 'simple', icon: siGo },
  javascript: { kind: 'simple', icon: siJavascript },
  kubernetes: { kind: 'simple', icon: siKubernetes },
  nextjs: { kind: 'simple', icon: siNextdotjs },
  openai: OPENAI_ICON,
  pnpm: { kind: 'simple', icon: siPnpm },
  postgresql: { kind: 'simple', icon: siPostgresql },
  react: { kind: 'simple', icon: siReact },
  reactnative: { kind: 'simple', icon: siReact },
  shadcn: { kind: 'simple', icon: siShadcnui },
  shadcnui: { kind: 'simple', icon: siShadcnui },
  spotify: { kind: 'simple', icon: siSpotify },
  spotifywebapi: { kind: 'simple', icon: siSpotify },
  tailwindcss: { kind: 'simple', icon: siTailwindcss },
  terraform: { kind: 'simple', icon: siTerraform },
  turborepo: { kind: 'simple', icon: siTurborepo },
  turborepopnpm: { kind: 'simple', icon: siTurborepo },
  typescript: { kind: 'simple', icon: siTypescript },
  vercel: { kind: 'simple', icon: siVercel },
};

const techId = techKey?.includes(':') ? techKey.split(':')[1] : techKey;
const normalizedCandidates = [techId, label]
  .filter((v): v is string => Boolean(v))
  .map(normalize);
const Icon = normalizedCandidates
  .map((candidate) => ICON_BY_KEY[candidate])
  .find((candidate) => Boolean(candidate));

const iconAccent =
  Icon?.kind === 'simple'
    ? `#${Icon.icon.hex}`
    : Icon?.kind === 'asset'
      ? '#101828'
      : '#101828';
const badgeStyle = `--tag-accent: ${iconAccent};`;
---

{
  href ? (
    <a
      class="tech-badge"
      data-tone={tone}
      data-tech-key={techKey}
      data-primary-tag={primaryTag}
      data-has-icon={Icon ? 'true' : 'false'}
      style={badgeStyle}
      href={href}
      target="_blank"
      rel="noopener noreferrer"
    >
      {Icon?.kind === 'simple' && (
        <svg
          class="tech-icon"
          width="12"
          height="12"
          viewBox="0 0 24 24"
          fill={`#${Icon.icon.hex}`}
          aria-hidden="true"
          focusable="false"
        >
          <path d={Icon.icon.path} />
        </svg>
      )}
      {Icon?.kind === 'asset' && (
        <img
          class="tech-icon tech-icon--img"
          src={Icon.src}
          width="12"
          height="12"
          alt=""
          loading="lazy"
          decoding="async"
        />
      )}
      <span>{label}</span>
    </a>
  ) : (
    <span
      class="tech-badge"
      data-tone={tone}
      data-tech-key={techKey}
      data-primary-tag={primaryTag}
      data-has-icon={Icon ? 'true' : 'false'}
      style={badgeStyle}
    >
      {Icon?.kind === 'simple' && (
        <svg
          class="tech-icon"
          width="12"
          height="12"
          viewBox="0 0 24 24"
          fill={`#${Icon.icon.hex}`}
          aria-hidden="true"
          focusable="false"
        >
          <path d={Icon.icon.path} />
        </svg>
      )}
      {Icon?.kind === 'asset' && (
        <img
          class="tech-icon tech-icon--img"
          src={Icon.src}
          width="12"
          height="12"
          alt=""
          loading="lazy"
          decoding="async"
        />
      )}
      <span>{label}</span>
    </span>
  )
}

<style>
  .tech-badge {
    --tag-accent: color-mix(in srgb, var(--ink-soft) 85%, #9aa4b2);
    --tag-height: 28px;
    --tag-radius: 999px;
    --tag-pad-y: 3px;
    --tag-pad-right: 9px;
    --tag-pad-left: 17px;
    --dot-size: 5px;
    --dot-radius: 999px;
    --dot-left: 7px;
    --dot-ring: 2px;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    min-height: var(--tag-height);
    padding: var(--tag-pad-y) var(--tag-pad-right) var(--tag-pad-y)
      var(--tag-pad-left);
    border-radius: var(--tag-radius);
    border: 1px solid color-mix(in srgb, var(--tag-accent) 35%, var(--line));
    background: color-mix(in srgb, var(--tag-accent) 10%, var(--panel));
    color: var(--ink);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.76rem;
    letter-spacing: 0.01em;
    line-height: 1.2;
    white-space: nowrap;
    position: relative;
    cursor: pointer;
  }

  .tech-badge[data-has-icon='true'] {
    --tag-pad-left: 7px !important;
    gap: 0.3rem;
  }

  .tech-badge :global(.tech-icon) {
    flex: 0 0 auto;
    inline-size: var(--icon-size, 12px);
    block-size: var(--icon-size, 12px);
  }

  .tech-badge :global(.tech-icon--img) {
    object-fit: contain;
  }

  .tech-badge::before {
    content: '';
    width: var(--dot-size);
    height: var(--dot-size);
    border-radius: var(--dot-radius);
    background: var(--tag-accent);
    position: absolute;
    left: var(--dot-left);
    top: 50%;
    transform: translateY(-50%);
    box-shadow: 0 0 0 var(--dot-ring)
      color-mix(in srgb, var(--tag-accent) 15%, transparent);
    pointer-events: none;
  }

  .tech-badge[data-has-icon='true']::before {
    display: none;
  }

  .tech-badge:hover {
    border-color: color-mix(in srgb, var(--tag-accent) 60%, var(--line));
    background: color-mix(in srgb, var(--tag-accent) 14%, var(--panel));
  }

  .tech-badge[data-tone='added'] {
    border-color: color-mix(in srgb, #12b76a 45%, var(--line));
    background: color-mix(in srgb, #12b76a 10%, var(--panel));
  }

  .tech-badge[data-tone='removed'] {
    border-color: color-mix(in srgb, #f04438 45%, var(--line));
    background: color-mix(in srgb, #f04438 10%, var(--panel));
  }

  .tech-badge[data-tone='added']::before {
    background: #12b76a;
    box-shadow: 0 0 0 4px rgba(18, 183, 106, 0.15);
  }

  .tech-badge[data-tone='removed']::before {
    background: #f04438;
    box-shadow: 0 0 0 4px rgba(240, 68, 56, 0.14);
  }

  .tech-badge[data-primary-tag='Languages'] {
    --tag-accent: #0058e8;
  }

  .tech-badge[data-primary-tag='Frameworks'] {
    --tag-accent: #7a5af8;
  }

  .tech-badge[data-primary-tag='UI'] {
    --tag-accent: #ec4899;
  }

  .tech-badge[data-primary-tag='Data'] {
    --tag-accent: #12b76a;
  }

  .tech-badge[data-primary-tag='Identity'] {
    --tag-accent: #fb7185;
  }

  .tech-badge[data-primary-tag='Integrations'] {
    --tag-accent: #f79009;
  }

  .tech-badge[data-primary-tag='Platforms/Hosting'] {
    --tag-accent: #8b5cf6;
  }

  .tech-badge[data-primary-tag='Infrastructure'] {
    --tag-accent: #06aed4;
  }

  .tech-badge[data-primary-tag='Tooling'] {
    --tag-accent: #ef4444;
  }

  .tech-badge[data-primary-tag='AI Tools'] {
    --tag-accent: #101828;
  }

  .tech-badge[data-primary-tag='AI Models/APIs'] {
    --tag-accent: #0ea5e9;
  }
</style>
