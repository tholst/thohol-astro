---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>

<style>
  /* global.css sets `time { font-size: ... }`; for formatted meta dates we want to inherit context. */
  time {
    font-size: inherit;
    line-height: inherit;
    font-family: inherit;
  }
</style>
