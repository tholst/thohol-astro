---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <div class="brand-section">
      <div class="brand-content">
        <h1 class="brand-name">Thomas Holst</h1>
        <span class="brand-subtitle">Personal Tech Blog</span>
      </div>
    </div>

    <div class="nav-section">
      <div class="nav-links">
        <HeaderLink href="/">Posts</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>

      <div class="theme-toggle-section">
        <button
          id="theme-toggle"
          aria-label="Toggle theme"
          class="theme-toggle"
        >
          <div class="toggle-track">
            <div class="toggle-thumb">
              <svg
                class="sun-icon"
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="12" cy="12" r="5"></circle>
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
              </svg>
              <svg
                class="moon-icon"
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                ></path>
              </svg>
            </div>
          </div>
        </button>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    background: var(--bg-primary);
    border-bottom: 1px solid var(--border-color);
    box-shadow: var(--box-shadow);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(12px);
    transition: all 0.3s ease;
  }

  header:hover {
    box-shadow: var(--box-shadow-lg);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    gap: 2rem;
  }

  .brand-section {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .brand-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .brand-name {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--text-primary);
    margin: 0;
    line-height: 1;
    letter-spacing: -0.025em;
    background: linear-gradient(
      135deg,
      var(--accent) 0%,
      var(--accent-dark) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all 0.3s ease;
  }

  .brand-name:hover {
    transform: scale(1.02);
    filter: brightness(1.1);
  }

  .brand-subtitle {
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    opacity: 0.8;
  }

  .nav-section {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-links :global(a) {
    padding: 0.75rem 1.25rem;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .nav-links :global(a:hover) {
    color: var(--accent);
    background: rgba(var(--accent), 0.1);
    transform: translateY(-1px);
  }

  .nav-links :global(a.active) {
    color: white;
    background: linear-gradient(
      135deg,
      var(--accent) 0%,
      var(--accent-dark) 100%
    );
    box-shadow: var(--box-shadow);
  }

  .nav-links :global(a.active:hover) {
    transform: translateY(-2px);
    box-shadow: var(--box-shadow-lg);
  }

  .theme-toggle-section {
    display: flex;
    align-items: center;
  }

  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    position: relative;
  }

  .toggle-track {
    width: 52px;
    height: 28px;
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    border-radius: 20px;
    position: relative;
    transition: all 0.3s ease;
    box-shadow: inset 0 2px 4px rgba(var(--gray), 0.1);
  }

  .toggle-track:hover {
    border-color: var(--accent);
    box-shadow:
      inset 0 2px 4px rgba(var(--gray), 0.1),
      0 0 0 3px rgba(var(--accent), 0.1);
  }

  .toggle-thumb {
    width: 20px;
    height: 20px;
    background: linear-gradient(
      135deg,
      var(--accent) 0%,
      var(--accent-dark) 100%
    );
    border-radius: 50%;
    position: absolute;
    top: 2px;
    left: 2px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 4px rgba(var(--gray), 0.2);
  }

  .sun-icon,
  .moon-icon {
    color: white;
    transition: all 0.3s ease;
  }

  .sun-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  .moon-icon {
    opacity: 0;
    transform: rotate(180deg) scale(0.8);
    position: absolute;
  }

  :global(.dark) .toggle-thumb {
    transform: translateX(24px);
    background: linear-gradient(
      135deg,
      var(--accent-light) 0%,
      var(--accent) 100%
    );
  }

  :global(.dark) .sun-icon {
    opacity: 0;
    transform: rotate(-180deg) scale(0.8);
  }

  :global(.dark) .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  :global(.dark) .toggle-track {
    background: var(--bg-primary);
    border-color: var(--accent);
  }

  @media (max-width: 768px) {
    nav {
      padding: 1rem;
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .nav-section {
      width: 100%;
      justify-content: space-between;
    }

    .brand-name {
      font-size: 1.5rem;
    }

    .brand-subtitle {
      font-size: 0.75rem;
    }

    .nav-links {
      gap: 0.25rem;
    }

    .nav-links :global(a) {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  const theme = (() => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme') || 'light';
    }
    if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'dark';
    }
    return 'light';
  })();

  if (theme === 'light') {
    document.documentElement.classList.remove('dark');
  } else {
    document.documentElement.classList.add('dark');
  }

  window.localStorage.setItem('theme', theme);

  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle('dark');

    const isDark = element.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  };

  const toggleButton = document.getElementById('theme-toggle');
  if (toggleButton) {
    toggleButton.addEventListener('click', handleToggleClick);
  }
</script>
