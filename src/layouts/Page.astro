---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import HeaderLink from '../components/HeaderLink.astro';

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .main {
        min-height: 100vh;
        display: flex;
      }

      .sidebar.sidebar-text {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 280px;
        background: var(--bg-primary);
        border-right: 1px solid var(--border-color);
        box-shadow: var(--box-shadow);
        z-index: 1000;
        transition: all 0.3s ease;
        overflow-y: auto;
        overflow-x: hidden;
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        gap: 1.5rem;
      }

      .sidebar.sidebar-text:hover {
        box-shadow: var(--box-shadow-lg);
      }

      .sidebar-top {
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .brand-section {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        text-align: center;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-color);
      }

      .brand-name {
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--text-primary);
        margin: 0;
        line-height: 1.2;
        letter-spacing: -0.025em;
        background: linear-gradient(
          135deg,
          var(--accent) 0%,
          var(--accent-dark) 100%
        );
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        transition: all 0.3s ease;
      }

      .brand-name:hover {
        transform: scale(1.02);
        filter: brightness(1.1);
      }

      .brand-subtitle {
        font-size: 0.7rem;
        color: var(--text-secondary);
        font-weight: 500;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        opacity: 0.8;
      }

      .nav-section {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .nav-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .nav-links :global(a) {
        display: block;
        padding: 0.875rem 1.25rem;
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .nav-links :global(a:hover) {
        color: var(--accent);
        background: rgba(var(--accent), 0.1);
        transform: translateX(4px);
      }

      .nav-links :global(a.active) {
        color: white;
        background: linear-gradient(
          135deg,
          var(--accent) 0%,
          var(--accent-dark) 100%
        );
        box-shadow: var(--box-shadow);
      }

      .nav-links :global(a.active:hover) {
        transform: translateX(4px);
        box-shadow: var(--box-shadow-lg);
      }

      .theme-toggle-section {
        flex-shrink: 0;
        display: flex;
        justify-content: center;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
      }

      .theme-toggle {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        position: relative;
      }

      .toggle-track {
        width: 52px;
        height: 28px;
        background: var(--bg-secondary);
        border: 2px solid var(--border-color);
        border-radius: 20px;
        position: relative;
        transition: all 0.3s ease;
        box-shadow: inset 0 2px 4px rgba(var(--gray), 0.1);
      }

      .toggle-track:hover {
        border-color: var(--accent);
        box-shadow:
          inset 0 2px 4px rgba(var(--gray), 0.1),
          0 0 0 3px rgba(var(--accent), 0.1);
      }

      .toggle-thumb {
        width: 20px;
        height: 20px;
        background: linear-gradient(
          135deg,
          var(--accent) 0%,
          var(--accent-dark) 100%
        );
        border-radius: 50%;
        position: absolute;
        top: 50%;
        left: 2px;
        transform: translateY(-50%);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 4px rgba(var(--gray), 0.2);
      }

      .sun-icon,
      .moon-icon {
        color: white;
        transition: all 0.3s ease;
      }

      .sun-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
      }

      .moon-icon {
        opacity: 0;
        transform: rotate(180deg) scale(0.8);
        position: absolute;
      }

      :global(.dark) .toggle-thumb {
        transform: translateX(24px) translateY(-50%);
        background: linear-gradient(
          135deg,
          var(--accent-light) 0%,
          var(--accent) 100%
        );
      }

      :global(.dark) .sun-icon {
        opacity: 0;
        transform: rotate(-180deg) scale(0.8);
      }

      :global(.dark) .moon-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
      }

      :global(.dark) .toggle-track {
        background: var(--bg-primary);
        border-color: var(--accent);
      }

      .sidebar-index-hidden {
        display: none;
      }

      .main-content {
        flex: 1;
        margin-left: 280px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: var(--space-xl) var(--space-lg);
      }

      .prose {
        width: 100%;
        max-width: 720px;
        margin: 0 auto;
        color: var(--text-primary);
        transition: color 0.3s ease;
      }

      .title {
        margin-bottom: var(--space-lg);
        padding: var(--space-md) 0;
        text-align: center;
        line-height: 1;
      }

      .title h1 {
        margin: 0 0 0.5em 0;
        color: var(--text-primary);
        transition: color 0.3s ease;
      }

      /* Mobile hamburger menu button */
      .mobile-menu-toggle {
        display: none;
        position: fixed;
        top: 1rem;
        left: 1rem;
        z-index: 1001;
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 0.5rem;
        cursor: pointer;
        box-shadow: var(--box-shadow);
      }

      .mobile-menu-toggle svg {
        width: 24px;
        height: 24px;
        color: var(--text-primary);
      }

      @media (max-width: 768px) {
        .main-content {
          margin-left: 0;
        }

        .sidebar.sidebar-text {
          transform: translateX(-100%);
          transition: transform 0.3s ease;
        }

        .sidebar.sidebar-text.mobile-open {
          transform: translateX(0);
        }

        .mobile-menu-toggle {
          display: block;
        }

        main {
          padding: var(--space-md) var(--space-sm);
        }

        .title {
          padding: var(--space-sm) 0;
        }

        .brand-name {
          font-size: 1.25rem;
        }

        .brand-subtitle {
          font-size: 0.7rem;
        }

        .nav-links :global(a) {
          padding: 0.75rem 1rem;
          font-size: 0.9rem;
        }
      }

      @media (max-width: 480px) {
        .sidebar.sidebar-text {
          width: 260px;
        }

        .sidebar.sidebar-text {
          padding: 1rem;
        }
      }
    </style>
  </head>

  <body>
    <div class="main">
      <div class="sidebar sidebar-text">
        <div class="sidebar-top">
          <div class="brand-section">
            <h1 class="brand-name">Thomas Holst</h1>
            <span class="brand-subtitle">Personal Tech Blog</span>
          </div>

          <nav class="nav-section">
            <div class="nav-links">
              <HeaderLink href="/blog">Posts</HeaderLink>
              <HeaderLink href="/about">About</HeaderLink>
            </div>
          </nav>

          <div class="theme-toggle-section">
            <button
              id="theme-toggle"
              aria-label="Toggle theme"
              class="theme-toggle"
            >
              <div class="toggle-track">
                <div class="toggle-thumb">
                  <svg
                    class="sun-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <circle cx="12" cy="12" r="5"></circle>
                    <line x1="12" y1="1" x2="12" y2="3"></line>
                    <line x1="12" y1="21" x2="12" y2="23"></line>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                    <line x1="1" y1="12" x2="3" y2="12"></line>
                    <line x1="21" y1="12" x2="23" y2="12"></line>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                  </svg>
                  <svg
                    class="moon-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                    ></path>
                  </svg>
                </div>
              </div>
            </button>
          </div>
        </div>

        <div class="sidebar-index-hidden">
          <!-- Additional sidebar content can go here -->
        </div>
      </div>

      <div class="main-content">
        <main>
          <article>
            <div class="prose">
              <div class="title">
                <h1>{title}</h1>
                <hr />
              </div>
              <slot />
            </div>
          </article>
        </main>
        <Footer />
      </div>
    </div>

    <button
      class="mobile-menu-toggle"
      id="mobile-menu-toggle"
      aria-label="Toggle mobile menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>

    <script>
      const theme = (() => {
        if (
          typeof localStorage !== 'undefined' &&
          localStorage.getItem('theme')
        ) {
          return localStorage.getItem('theme') || 'light';
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }

      window.localStorage.setItem('theme', theme);

      const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle('dark');

        const isDark = element.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      };

      const toggleButton = document.getElementById('theme-toggle');
      if (toggleButton) {
        toggleButton.addEventListener('click', handleToggleClick);
      }

      // Mobile menu functionality
      const handleMobileMenuToggle = () => {
        const sidebar = document.querySelector('.sidebar');
        if (sidebar) {
          sidebar.classList.toggle('mobile-open');
        }
      };

      const mobileMenuButton = document.getElementById('mobile-menu-toggle');
      if (mobileMenuButton) {
        mobileMenuButton.addEventListener('click', handleMobileMenuToggle);
      }

      // Close mobile menu when clicking outside
      document.addEventListener('click', (event) => {
        const sidebar = document.querySelector('.sidebar');
        const mobileButton = document.getElementById('mobile-menu-toggle');

        if (
          sidebar &&
          mobileButton &&
          event.target instanceof Node &&
          !sidebar.contains(event.target) &&
          !mobileButton.contains(event.target) &&
          sidebar.classList.contains('mobile-open')
        ) {
          sidebar.classList.remove('mobile-open');
        }
      });
    </script>
  </body>
</html>
